{
  "name": "@hipay/hipay-fullservice-sdk",
  "description": "HiPay Backend SDK",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "author": "HiPay",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "test": "jest",
    "fix": "yarn eslint . --fix",
    "lint": "yarn eslint ."
  },
  "dependencies": {
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@stryker-mutator/core": "^7.1.1",
    "@stryker-mutator/jest-runner": "^7.1.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.1.0",
    "install": "^0.13.0",
    "jest": "^24.9.0",
    "jest-html-reporters": "^1.2.1",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^9.4.3",
    "lodash.isequal": "^4.5.0",
    "prettier": "2.4.1",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverage": true,
    "moduleNameMapper": {
      "axios": "axios/dist/node/axios.cjs"
    }
  },
  "jestSonar": {
    "reportPath": "reports",
    "indent": 4,
    "reportFile": "test-report.xml"
  },
  "lint-staged": {
    "*.{js,json},!nodes_modules/*": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
